<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tccolor"
    android:orientation="vertical"
    android:paddingVertical="8dp"
   >

<LinearLayout
    android:layout_alignParentLeft="true"
    android:id="@+id/itemLeft"
    android:layout_toLeftOf="@id/walk"
    android:layout_marginHorizontal="10dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ssss"

        android:textColor="@color/textcolor"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ss"
        android:textColor="@color/textcolor"
        android:textSize="13sp" />
</LinearLayout>

    <TextView
        android:id="@+id/walk"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ride"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:drawablePadding="2dp"
        android:drawableTop="@mipmap/bx"
        android:text="步行"
        android:textColor="@color/textcolor"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/drive"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:drawableTop="@mipmap/js"
        android:drawablePadding="2dp"
        android:layout_alignParentRight="true"
        android:text="驾驶"
        android:textColor="@color/textcolor"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/ride"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/drive"
        android:drawableTop="@mipmap/qx2"
        android:drawablePadding="2dp"
        android:text="骑行"
        android:textColor="@color/textcolor"
        android:textSize="10sp" />
</RelativeLayout>